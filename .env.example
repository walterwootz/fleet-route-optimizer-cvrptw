# CVRPTW Solver Configuration
# Copy this file to .env and customize as needed

# API Settings
# Application Settings
APP_NAME="Fleet Route Optimizer API"
API_HOST=127.0.0.1
API_PORT=8000
DEBUG=false

# CORS Settings (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Solver Settings
DEFAULT_TIME_LIMIT=60
DEFAULT_SOLVER=ortools
ORTOOLS_VEHICLE_PENALTY=100000.0
GUROBI_VEHICLE_PENALTY=1000.0
DEFAULT_DISTANCE_WEIGHT=1.0
DEFAULT_MIP_GAP=0.01

# Distance Cache Settings
DISTANCE_CACHE_DB=distance_cache.db
OSRM_BASE_URL=http://router.project-osrm.org

# Logging Settings
LOG_LEVEL=INFO

# File Paths
INPUTS_DIR=inputs
RESULTS_DIR=results
